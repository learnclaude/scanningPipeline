# Production Environment Variables
NODE_ENV=production
ENVIRONMENT=production
NEXT_PUBLIC_API_URL=http://localhost:18090/api

# Network Configuration
SUBNET_PREFIX=10.103.0
GATEWAY_IP=10.103.0.1
NGINX_IP=10.103.0.10
APP_IP=10.103.0.20
REDIS_IP=10.103.0.30

# Port Configuration
NGINX_PORT=18090
NGINX_SECURE_PORT=18090
APP_INTERNAL_PORT=3000
REDIS_INTERNAL_PORT=6379

# Network Names
NETWORK_NAME=filename-generator-prod-network
BRIDGE_NAME=prod-bridge

# Container Names
NGINX_CONTAINER=filename-generator-nginx-prod
APP_CONTAINER=filename-generator-app-prod
REDIS_CONTAINER=filename-generator-redis-prod

# Hostnames
NGINX_HOSTNAME=nginx-prod.local
APP_HOSTNAME=app-prod.local
REDIS_HOSTNAME=redis-prod.local

# Application Settings
NEXT_TELEMETRY_DISABLED=1

# Performance
ENABLE_CACHE=true
CACHE_TTL=7200
NODE_OPTIONS=--max-old-space-size=2048

# Monitoring
ENABLE_MONITORING=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/production
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.01

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
LOG_RETENTION_DAYS=30

# Security
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
ENABLE_HELMET=true
ENABLE_CORS=true
CORS_ORIGIN=https://example.com

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_A_B_TESTING=true

# External Services
ANALYTICS_ID=UA-PRODUCTION-ID
GTM_ID=GTM-PRODUCTION

# Database (if applicable)
DATABASE_URL=postgresql://user:pass@prod-db.example.com:5432/filename_generator_prod
DATABASE_POOL_SIZE=20

# Redis (if applicable)
REDIS_URL=redis://prod-redis.example.com:6379
REDIS_MAX_RETRIES=3

# CDN
CDN_URL=https://cdn.example.com
ASSET_PREFIX=https://cdn.example.com